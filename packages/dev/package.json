{
  "name": "@opengsn/dev",
  "version": "3.0.0-alpha.4",
  "license": "GPL-3.0-only",
  "main": "dist/src/index.js",
  "files": [
    "dist/src/*",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "deploy": "yarn solpp; hardhat deploy --export-all all-networks.json ",
    "verify": "hardhat etherscan-verify --force-license  --license GPL-3.0",
    "tsc": "tsc",
    "watch-tsc": "tsc -w",
    "lint": "eslint -f unix .",
    "lint-fix": "yarn lint --fix",
    "solpp": "yarn --cwd=\"../..\" solpp",
    "truffle-console": "truffle console",
    "test-local": "ENABLE_CONSOLE_LOG=1 yarn solpp && truffle test --compile-all",
    "gas-calculations": "ENABLE_CONSOLE_LOG=0 yarn solpp && GAS_CALCULATIONS=1 truffle test test/RelayHubGasCalculations.test.ts test/PaymasterCommitment.test.ts --compile-all --network npmtest",
    "test-webpack": "TEST_WEBPACK=1 truffle test test/RelayServer.webpack.test.ts --network npmtest",
    "test-only": "truffle --network npmtest test",
    "rm-dist": "rm -rf tsconfig.tsbuildinfo dist build"
  },
  "dependencies": {
    "@opengsn/cli": "^3.0.0-alpha.4",
    "@opengsn/contracts": "^3.0.0-alpha.4",
    "@opengsn/provider": "^3.0.0-alpha.4",
    "@opengsn/relay": "^3.0.0-alpha.4"
  },
  "devDependencies": {
    "@ethereumjs/tx": "^3.2.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@types/chai-as-promised": "^7.1.3",
    "@types/sinon": "^9.0.10",
    "@types/sinon-chai": "^3.2.5",
    "abi-decoder": "^2.3.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eth-sig-util": "^3.0.1",
    "ethereumjs-util": "^7.1.0",
    "ethers": "^5.5.1",
    "hardhat": "^2.6.8",
    "hardhat-deploy": "^0.11.4",
    "hardhat-deploy-ethers": "0.3.0-beta.13",
    "sinon": "^9.2.3",
    "sinon-chai": "^3.5.0",
    "ts-node": "8.6.2"
  }
}

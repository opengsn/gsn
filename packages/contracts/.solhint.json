{
  "extends": "solhint:recommended",
  "rules": {
    "immutable-vars-naming": ["off"],
    "custom-errors": ["off"],
    "no-global-import": ["off"],
    "no-console": ["off"],
    "compiler-version": ["error",">=0.6"],
    "func-visibility": ["off",{"ignoreConstructors":true}],
    "mark-callable-contracts": ["off"]
  }
}

    "@0x/sol-compiler": "3.1.8",
    "@0x/sol-coverage": "3.0.5",
    "@0x/sol-profiler": "3.1.7",
    "@0x/sol-trace": "2.0.13",
    "@0x/subproviders": "4.1.0",
    "@openeth/truffle-typings": "^0.0.1",
    "@openzeppelin/test-helpers": "0.5.5",
    "@types/bignumber.js": "5.0.0",
    "@types/chai": "4.2.11",
    "@types/mocha": "7.0.2",
    "@types/node": "13.9.1",
    "@typescript-eslint/eslint-plugin": "2.23.0",
    "bignumber.js": "9.0.0",
    "browser-request": "0.3.3",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "eslint": "^6.8.0",
    "eslint-config-standard": "14.1.0",
    "eslint-config-standard-with-typescript": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-mocha-no-only": "1.1.0",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "ganache-cli": "6.9.1",
    "http-server": "0.11.1",
    "istanbul": "0.4.5",
    "lodash": "4.17.13",
    "opn-cli": "4.0.0",
    "promisify": "0.0.3",
    "rlp": "2.2.3",
    "run-with-testrpc": "0.3.1",
    "shx": "0.3.2",
    "sinon": "7.5.0",
    "sinon-chai": "^3.4.0",
    "solc": "0.5.16",
    "solhint": "^2.3.0",
    "tar": "4.4.2",
    "truffle": "5.1.16",
    "truffle-contract": "4.0.31",
    "truffle-flattener": "1.4.2",
    "truffle-hdwallet-provider": "1.0.17",
    "ts-node": "8.6.2",
    "typechain": "1.0.5",
    "typechain-target-trufflehotfix": "^0.0.1-alpha",
    "typechain-target-web3-v1": "1.0.4",

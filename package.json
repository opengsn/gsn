{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**eslint**",
      "**stdjsonin**",
      "**ts-node**"
    ]
  },
  "contributors": [
    {
      "name": "Dror Tirosh",
      "email": "dror.tirosh@gmail.com"

    "ethereumjs-wallet": "0.6.3",
    "openzeppelin-solidity": "2.3.0",
    "ow": "^0.17.0",
    "request-promise": "4.2.2",
    "web3": "1.2.6",
    "web3-utils": "1.2.6",
    "webpack-bundle-analyzer": "3.3.2"
  },
